<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <Button
        android:id="@+id/btn_http1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="HttpURLConnection" />

    <Button
        android:id="@+id/btn_http2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_http1"
        android:layout_marginTop="5dp"
        android:text="HttpClient" />

    <Button
        android:id="@+id/btn_http3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_http2"
        android:layout_marginTop="5dp"
        android:text="General Https" />

    <Button
        android:id="@+id/btn_http4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_http3"
        android:layout_marginTop="5dp"
        android:text="Https with TrustManager" />

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btn_anim1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="move" />

        <Button
            android:id="@+id/btn_anim2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="rotate" />

        <Button
            android:id="@+id/btn_anim3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="scale" />

        <Button
            android:id="@+id/btn_anim4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="alpha" />

        <Button
            android:id="@+id/btn_anim5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="all" />
    </LinearLayout>

    <TextView
        android:id="@+id/txt_anim1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:text="animation test text" />

    <ImageView
        android:id="@+id/img_anim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp" />

    <Button
        android:id="@+id/btn_anim6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="translationY" />

    <Button
        android:id="@+id/btn_anim7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="backgroundColor" />

    <Button
        android:id="@+id/btn_anim8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AnimatorSet" />

    <Button
        android:id="@+id/btn_anim9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="x scale 1" />

    <Button
        android:id="@+id/btn_anim10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="x scale 2" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <Button
            android:id="@+id/menu"
            style="@style/MenuStyle"
            android:background="@drawable/menu" />

        <Button
            android:id="@+id/item1"
            style="@style/MenuItemStyle"
            android:background="@drawable/circle1"
            android:visibility="gone" />

        <Button
            android:id="@+id/item2"
            style="@style/MenuItemStyle"
            android:background="@drawable/circle2"
            android:visibility="gone" />

        <Button
            android:id="@+id/item3"
            style="@style/MenuItemStyle"
            android:background="@drawable/circle3"
            android:visibility="gone" />

        <Button
            android:id="@+id/item4"
            style="@style/MenuItemStyle"
            android:background="@drawable/circle4"
            android:visibility="gone" />

        <Button
            android:id="@+id/item5"
            style="@style/MenuItemStyle"
            android:background="@drawable/circle5"
            android:visibility="gone" />
    </FrameLayout>

</LinearLayout>
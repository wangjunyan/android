<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.wangjunyan.myfirstapp.PlotActivity">

    <com.example.wangjunyan.myfirstapp.PlotView
        android:id="@+id/plot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp">

        <TextView
            android:id="@+id/tv_bearing"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:textColor="@color/bg_mask"
            android:textSize="15sp"
            android:text="Bear"/>

        <SeekBar
            android:id="@+id/bearing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">

        <TextView
            android:id="@+id/tv_tilt"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:textColor="@color/bg_mask"
            android:textSize="15sp"
            android:text="Tilt"/>

        <SeekBar
            android:id="@+id/tilt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">

        <TextView
            android:id="@+id/tv_transx"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:textColor="@color/bg_mask"
            android:textSize="15sp"
            android:text="TransX"/>

        <SeekBar
            android:id="@+id/transx"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">

        <TextView
            android:id="@+id/tv_transy"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:textColor="@color/bg_mask"
            android:textSize="15sp"
            android:text="TransY"/>

        <SeekBar
            android:id="@+id/transy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">

        <TextView
            android:id="@+id/tv_rotatez"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:textColor="@color/bg_mask"
            android:textSize="15sp"
            android:text="RotateZ"/>

        <SeekBar
            android:id="@+id/rotatez"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>
